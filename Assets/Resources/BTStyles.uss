.node {
    background-color: #1e1e1e;
    border-color: #cccccc;
    border-width: 2px;
    border-radius: 8px;
    padding: 6px;
    color: white;
    font-size: 13px;
}

.node.sequence {
    background-color: #355c7d;
}

.node.selector {
    background-color: #6c5b7b;
}

.node.action {
    background-color: #c06c84;
}

.node.decorator {
    background-color: #f67280;
}